BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        TextInput:
            id: input_mile
            font_size: 50
            multiline: False
            on_text: app.calculate(input_mile.text)

        BoxLayout:
            size_hint_x: 0.25
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.up_and_down(input_mile.text, 1)
            Button:
                text: 'Down'
                on_press: app.up_and_down(input_mile.text, -1)

    Button:
        text:'Convert miles to km'
        on_press: app.calculate(input_mile.text)

    Label:
        id: output
        text: app.output_km
        font_size: 50
        color: (1, 1, 0, 1)